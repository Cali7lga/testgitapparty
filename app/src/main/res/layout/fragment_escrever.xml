<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_degrade"
    tools:context="com.example.home.weddingapp.Fragments.EscreverFragment">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/textview_digitar"
        android:gravity="top"
        android:hint="Deixe sua mensagem aqui"
        android:inputType="textImeMultiLine"
        android:textColor="@color/dark_gray"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_digitar"
        android:hint="Ass.:"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="@color/dark_gray"
        android:textSize="17sp" />

    <Button
        android:text="Enviar"
        android:id="@+id/button8"
        android:background="@drawable/enviar_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textAllCaps="false" />

</LinearLayout>
