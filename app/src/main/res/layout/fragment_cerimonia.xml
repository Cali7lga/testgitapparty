<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.weddingapp.Fragments.CerimoniaFragment"
    android:background="@color/bg_bege">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:id="@+id/imageView10"
            android:src="@drawable/local"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Av Lafayete Coutinho, 496, Comércio"
            android:textColor="@color/marrom_texto"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:fontFamily="serif"
            android:text="Instruções aos convidados"
            android:textColor="@color/marrom_texto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:text="Como chegar"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Utilize os botões abaixo para conferir a localização do evento, traçar a rota até o local e visualizar o Street View, utilizando o aplicativo do google maps."
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/map"
                android:background="@android:color/transparent"
                android:layout_marginLeft="110dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="90dp"
                android:background="@android:color/transparent"
                android:src="@drawable/maid" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/textView6"
                android:textSize="12dp"
                android:textColor="@color/marrom_texto"
                android:layout_marginLeft="112dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street View"
                android:id="@+id/textView11"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/marrom_texto"
                android:textStyle="italic"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:text="Cerimonia e Recepção"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp"
            android:textStyle="normal|italic" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="132dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Porto Trapiche Eventos - 6 de Maio de 2017, às 19h."
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:text="Estacionamento"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp"
            android:textStyle="normal|italic" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Haverá manobristas no local."
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Fornecedores"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Essa é a nossa forma de agradecer aos responsáveis pela realização do nosso casamento!"
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fornecedores"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:background="@drawable/round_button"
            android:layout_marginBottom="12dp" />

    </LinearLayout>

</ScrollView>