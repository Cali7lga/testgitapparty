<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.weddingapp.Fragments.CerimoniaFragment"
    android:background="@color/bg_bege">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:scaleType="centerCrop" />

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp" />

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:text="Instruções aos convidados"
            android:textColor="@color/marrom_texto"
            android:textSize="16sp" />

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:text="Como chegar"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="Utilize os botões abaixo para conferir a localização do evento, traçar a rota até o local e visualizar o Street View, utilizando o aplicativo do google maps."
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/map" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp"
                android:background="@android:color/transparent"
                android:src="@drawable/streetview" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <com.example.home.weddingapp.Others.TextViewAvenir
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/textView6"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textSize="12dp"
                android:textColor="@color/marrom_texto"
                android:layout_gravity="center_vertical" />

            <com.example.home.weddingapp.Others.TextViewAvenir
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street View"
                android:id="@+id/textView11"
                android:layout_marginLeft="78dp"
                android:layout_marginStart="78dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/marrom_texto" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="Fornecedores"
            android:textColor="@color/marrom_texto"
            android:textSize="12sp" />

        <view
            class="android.support.v4.widget.DrawerLayout"
            android:layout_width="85dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/marrom_texto" />

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="Essa é a nossa forma de agradecer aos responsáveis pela realização do nosso casamento!"
            android:textColor="@color/marrom_texto"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/maid"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <com.example.home.weddingapp.Others.TextViewAvenir
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fornecedores"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</ScrollView>