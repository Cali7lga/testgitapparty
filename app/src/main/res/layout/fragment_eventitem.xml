<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_bege">

    <com.herasoft.due.Others.TextViewAvenir
        android:id="@+id/titulo_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/marrom_texto"
        android:textSize="12sp"
        android:textStyle="normal|italic" />

    <view
        class="android.support.v4.widget.DrawerLayout"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/marrom_texto" />

    <com.herasoft.due.Others.TextViewAvenir
        android:id="@+id/texto_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/marrom_texto"
        android:textSize="14sp" />

</LinearLayout>