<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.weddingapp.Fragments.CaptureFragment"
    android:orientation="vertical"
    android:background="#f4f4ec"
    android:weightSum="1">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gallery"
        android:id="@+id/imageButton21"
        android:background="@android:color/transparent"
        android:scaleType="fitEnd"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"/>

    <com.example.home.weddingapp.Others.CustomImageView
        android:layout_width="match_parent"
        android:id="@+id/imageView20"
        android:layout_height="275dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/graytransparent"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

    <TextView
        android:text="Carregando imagem..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView36"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:textColor="#E6D59D"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar1"
        android:layout_weight="1"
        android:max="100" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1">

        <Button
            android:text="Compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:background="@drawable/round_button"
            android:textColor="#E6D59D"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="invisible"
            android:fontFamily="cursive"
            android:textAllCaps="false"
            android:textSize="23sp"
            android:textStyle="normal|italic" />

        <Button
            android:layout_height="60dp"
            android:id="@+id/button9"
            android:background="@drawable/enviar_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#E6D59D"
            android:layout_width="60dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</LinearLayout>
