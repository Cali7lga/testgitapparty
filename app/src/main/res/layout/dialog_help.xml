<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <view
        class="android.support.v4.widget.SlidingPaneLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/dark_gray" />

    <com.herasoft.due.Others.TextViewAvenir
        android:id="@+id/textView40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queremos que os noivos se sintam seguros no nosso app, por isso pedimos que os usuários efetuem o cadastro para que possamos identificá-los."
        android:layout_marginTop="40dp"
        android:textColor="@color/dark_gray"/>

    <com.herasoft.due.Others.TextViewAvenir
        android:id="@+id/textView41"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PS: Não se preocupe, nós também não gostamos de spam. Seu email estará seguro conosco ;)"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/gray_btn_bg_pressed_color"/>

</LinearLayout>