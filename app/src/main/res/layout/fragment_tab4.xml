<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.weddingapp.Fragments.Tab4Fragment"
    android:background="@drawable/gold">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:id="@+id/imageView10"
            android:src="@drawable/local"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tv Albertino Cabral Henrique, 212, Pituacu"
            android:id="@+id/textView5"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/shape"
                android:background="@android:color/transparent"
                android:layout_marginLeft="110dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/signs"
                android:background="@android:color/transparent"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/textView6"
                android:textStyle="italic"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="112dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street View"
                android:id="@+id/textView11"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerimonia e Recepção"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="serif"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casarao Parque Tropical - 19h"
            android:id="@+id/textView8"
            android:layout_marginLeft="15dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estacionamento"
            android:id="@+id/textView9"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="12dp"
            android:textSize="13sp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textStyle="normal|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vagas para visitantes dentro do condominio. Havera manobrista no local."
            android:id="@+id/textView10"
            android:layout_marginLeft="15dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fornecedores"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:fontFamily="cursive"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:background="@drawable/round_button"
            android:layout_marginBottom="12dp" />

    </LinearLayout>

</ScrollView>