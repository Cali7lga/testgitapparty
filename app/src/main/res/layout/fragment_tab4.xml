<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.weddingapp.Fragments.Tab4Fragment"
    android:background="@drawable/gold">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:id="@+id/imageView10"
        android:src="@drawable/local" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tv Albertino Cabral Henrique, 212, Pituacu"
            android:id="@+id/textView5"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/location"
                android:background="@android:color/transparent"
                android:layout_marginLeft="110dp"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/placeholder"
                android:background="@android:color/transparent"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/textView6"
                android:textStyle="italic"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="112dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street View"
                android:id="@+id/textView11"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"
                android:textStyle="italic"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerimonia e Recepção"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"
            android:fontFamily="serif"
            android:textSize="13sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casarao Parque Tropical - 19h"
            android:id="@+id/textView8"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estacionamento"
            android:id="@+id/textView9"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="12dp"
            android:textSize="13sp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vagas para visitantes dentro do condominio. Havera manobrista no local."
            android:id="@+id/textView10"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="serif"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fornecedores"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="cursive"
            android:textSize="20sp"
            android:textColor="@color/place_autocomplete_search_hint"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:background="@drawable/round_button" />


    </LinearLayout>

</ScrollView>